# Variables de entorno para configuración del arbitraje de funding rate

# Claves API para exchanges (reemplazar con tus propias claves)
# Binance
BINANCE_API_KEY=your_binance_api_key_here
BINANCE_API_SECRET=your_binance_api_secret_here

# Bybit
BYBIT_API_KEY=your_bybit_api_key_here
BYBIT_API_SECRET=your_bybit_api_secret_here

# OKX
OKX_API_KEY=your_okx_api_key_here
OKX_API_SECRET=your_okx_api_secret_here
OKX_PASSPHRASE=your_okx_passphrase_here

# Configuración de trading
# Pares de trading para arbitraje (formato: EXCHANGE:SYMBOL)
TRADING_PAIRS=BINANCE:BTC/USDT,BYBIT:BTC-PERP,OKX:BTC-USDT-SWAP

# Umbral mínimo de diferencial de funding rate para activar arbitraje (en % por 8 horas)
MIN_FUNDING_RATE_DIFF=0.01

# Tamaño máximo de posición por exchange (en USD)
MAX_POSITION_SIZE=10000

# Gestión de riesgos
# Máxima pérdida diaria permitida (en USD)
MAX_DAILY_DRAWDOWN=500

# Tiempo máximo de mantenimiento de posición (en horas)
MAX_POSITION_HOLDING_TIME=24

# Umbral de diferencial para cerrar posición (en % por 8 horas)
EXIT_FUNDING_RATE_DIFF=0.005

# Configuración de API y monitoreo
# Puerto para el endpoint de health-check
API_PORT=8000

# Nivel de logging (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# Directorio para archivos de log
LOG_DIR=./logs
